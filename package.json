{
  "name": "pingcode-mcp",
  "version": "1.0.0",
  "description": "PingCode MCP Server - 通过自然语言查询工时和工作项数据",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "node tests/regression.mjs",
    "test:http": "node tests/http-security.mjs",
    "test:quiet": "node tests/regression.mjs 2>&1 | grep -v '{\"level\"'",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest tests/unit",
    "test:e2e": "vitest run tests/e2e",
    "test:all": "vitest run"
  },
  "keywords": [
    "mcp",
    "pingcode",
    "workload",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.0",
    "dotenv": "^17.2.3",
    "pino": "^9.0.0",
    "pino-roll": "^4.0.0",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "vitest": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
